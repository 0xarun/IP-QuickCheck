{
    "manifest_version": 3,
    "name": "IP QuickCheck - One-Click IP Reputation Lookup",
    "version": "1.0.0",
    "description": "One-Click IP Reputation Lookup. Built by 0xarun for instant VirusTotal + AbuseIPDB checks from your right-click menu.",
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://www.virustotal.com/*",
        "https://api.abuseipdb.com/*",
        "https://ipinfo.io/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "32": "assets/icon32.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "options_page": "options/options.html",
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}